<Window x:Class="MySolutionExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySolutionExplorer"
        mc:Ignorable="d"
        Title="MySolutionExlorer" Height="350" Width="525">
	<Grid>
		<Button x:Name="loadButton" Content="Загрузить" HorizontalAlignment="Left" Margin="409,230,0,0" VerticalAlignment="Top" Width="75" Click="loadButton_Click"/>
		<Button x:Name="createButton" Content="Создать" HorizontalAlignment="Left" Margin="409,132,0,0" VerticalAlignment="Top" Width="75" Click="createButton_Click"/>
		<TextBox x:Name="siteText" HorizontalAlignment="Left" Height="23" Margin="386,48,0,0" TextWrapping="Wrap" Text="acmp" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="numberText" HorizontalAlignment="Left" Height="23" Margin="386,20,0,0" TextWrapping="Wrap" Text="25" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="nameText" HorizontalAlignment="Left" Height="23" Margin="386,76,0,0" TextWrapping="Wrap" Text="Больше-меньше" VerticalAlignment="Top" Width="120"/>

		<ListView 
			Name="mainTable"
			Margin="10,20,136,10">
			<ListView.View>
				<GridView>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Site}"
						Width="70">Сайт</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Number}" 
						Width="50">Номер</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Name}"  
						Width="150">Название</GridViewColumn>
					<GridViewColumn 
						DisplayMemberBinding="{Binding Path=Lang}"  
						Width="50">Язык</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<Button x:Name="saveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="409,270,0,0" VerticalAlignment="Top" Width="75" Click="saveButton_Click"/>
		<Button x:Name="showButton" Content="Обзор..." HorizontalAlignment="Left" Margin="409,176,0,0" VerticalAlignment="Top" Width="75" Click="showButton_Click"/>

		<ComboBox Name="langList" Height="23" VerticalAlignment="Top" Margin="387,104,11,0">
			<TextBlock>cpp</TextBlock>
		</ComboBox>

	</Grid>
</Window>
